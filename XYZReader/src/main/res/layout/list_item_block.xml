<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="block"
            type="com.example.xyzreader.data.model.Thing"/>
        <variable name="callback"
            type="com.example.xyzreader.ui.BlockChainListAdapter.BlockClickCallback"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/article_card_padding"
        android:layout_margin="@dimen/article_card_margin"
        android:clipToPadding="true"
        android:onClick="@{(view) ->  callback.onListItemClick(view, block)}"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/block_json"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:textColor="@android:color/black"
            android:ellipsize="end"
            android:maxLines="20"
            android:padding="16dp"
            tools:text="@tools:sample/lorem/random"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </android.support.v7.widget.CardView>

</layout>